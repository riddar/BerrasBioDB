@model BerrasBioDB.Models.Ticket
@inject BerrasBioDB.App_Data.Context _context;

<h4>Ticket</h4>


<form asp-action="AddCustomer">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        <h4>Ticket</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StartTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Movie)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Seat)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Seat.Name)
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <label asp-for="Customer" class="control-label" />
        <select asp-for="Customer.Id" class="form-control">
            @foreach (var Customer in _context.Customers)
            {
                <option value="@Customer.Id">@Customer.Name</option>}
        </select>
        <span asp-validation-for="Customer.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
