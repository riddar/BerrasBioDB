@model BerrasBioDB.Models.Ticket;
@inject BerrasBioDB.App_Data.Context _context;
@{ViewData["Title"] = "Booking";}

<h4>Ticket</h4>
<hr />
<form asp-action="Booking">
    <div asp-validation-summary="ModelOnly" class="text-danger" />

    <label asp-for="StartTime" class="control-label" />
    <input asp-for="StartTime" class="form-control" />
    <span asp-validation-for="StartTime" class="text-danger"></span>

    <label asp-for="Movie" class="control-label"></label>
    <select asp-for="Movie.Id" class="form-control">
        @foreach (var movie in _context.Movies)
        {
            <option value="@movie.Id">@movie.Title</option>}
    </select>
    <span asp-validation-for="Movie.Title" class="text-danger"></span>

    <label asp-for="Seat" class="control-label"></label>
    <select asp-for="Seat.Id" class="form-control">
        @foreach (var venue in _context.Venues)
        {
            @foreach (var seat in _context.Seats.Where(x => x.Venue.Id == venue.Id).OrderBy(y => y.Id))
            {
                <option value="@seat.Id">@seat.Name (@venue.Name)</option>
            }
        }
    </select>
    <span asp-validation-for="Seat.Id" class="text-danger"></span>
</form>
<input type="submit" value="Create Tickets" />

<a asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
