@model BerrasBioDB.Models.Ticket
@inject BerrasBioDB.App_Data.Context _context;

<h4>Ticket</h4>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="StartTime" class="control-label" />
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Movie" class="control-label" />
        <select asp-for="Movie.Id" class="form-control">
            @foreach (var movie in _context.Movies)
            {
    <option value="@movie.Id">@movie.Title</option>}
        </select>
        <span asp-validation-for="Movie.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="Seat.Id" class="form-control">
            @foreach (var venue in _context.Venues)
            {
    @foreach(var seat in _context.Seats.Where(x => x.Venue.Id == venue.Id))
                {
<option value="@seat.Id">@seat.Name (@venue.Name)</option>}
            }
        </select>
        <span asp-validation-for="Seat.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer" class="control-label" />
        <select asp-for="Customer.Id" class="form-control">
            @foreach (var Customer in _context.Customers)
            {
    <option value="@Customer.Id">@Customer.Name</option>}
        </select>
        <span asp-validation-for="Customer.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
